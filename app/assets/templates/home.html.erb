<div class="top_index">
<%= image_tag("logo.png", :alt => "spotify logo", :id => "header_image") %>

  <h1>How much money do artists make on Spotify?</h1>
  <h3>Find out for yourself!</h3>

  <div class="col-lg-6 col-lg-offset-3" id="search_form">
    <form ng-submit="home.submit()" >
      <input type="text" id="inputQuery" class="form-control" placeholder="Enter an Artist You Love" required="required" ng-model="home.query">
      <input type="submit" class="btn btn-primary btn-lg" value="$earch">
    </form>
  </div>

  <div class="col-lg-6 col-lg-offset-3" id="search_result" ng-if="home.artist">
    <img src="{{ home.spotifyImage }}">
    <h2>{{ home.artist }}</h2>
    <div ng-bind-html="home.bio"></div>
    <h2>{{ home.playcount }} estimated plays</h2>

    <div id="track_art" ng-repeat="track in home.tracks" ng-if="home.tracks">
      <h6>{{ track.name }}</h6>
      <img src="{{ track.album.images[1].url }}">
      </div>
    </div>

</div>